<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        tools:context=".Seller.fragments.SellerProfileFragment">

        <!-- Profile Heading -->
        <TextView
            android:id="@+id/tvProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Profile"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Full Name -->
        <TextView
            android:id="@+id/seller_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name: Seller Name"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvProfile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Phone Number -->
        <TextView
            android:id="@+id/seller_phone_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Phone: +91 9876543210"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/seller_name_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Shop Address -->
        <TextView
            android:id="@+id/seller_shop_address_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Shop Address: Market Road, City"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/seller_phone_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Pincode -->
        <TextView
            android:id="@+id/seller_pincode_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pincode: 123456"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/seller_shop_address_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Email -->
        <TextView
            android:id="@+id/seller_email_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email: seller@example.com"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/seller_pincode_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Sign Out Button -->
        <Button
            android:id="@+id/btn_sign_out"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:textAllCaps="false"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/primary"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/seller_email_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
